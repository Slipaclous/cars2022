{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
</style>
<div class="container-fluid col-10">
    <div class="main">
        <h1 class="main-heading">
            <span class="main-heading-primary">Bienvenue</span>
            <span class="main-heading-secondary">sur cars 2022</span>
            <span class="main-heading-tercary">Découvrez nos marques </span>
        </h1>
    </div>

    <div class="row">
        {% for marque in marques %}
        {# {% set url =  %} #}

